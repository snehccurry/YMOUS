printf '\033]2;ymous\a'

if [[ -d ~/ymous ]]
then
{
cd ~/ymous
mkdir etc/.disabled
mv ymous etc/.disabled
mv etc/ymous ~/ymous
cp etc/.disabled/ymous etc
rm -rf etc/.disabled
} &> /dev/null
chmod +x ymous
./ymous
{
if [[ -f ~/ymous/.updated ]]
then
rm ~/ymous/.updated
else
cd ~/ymous
mkdir etc/.disabled
mv ymous etc/.disabled
mv etc/ymous ~/ymous
cp etc/.disabled/ymous etc
rm -rf etc/.disabled
fi
} &> /dev/null
else
{
ASESR="$(ping -c 1 -q www.google.com >&/dev/null; echo $?)"
} &> /dev/null
if [[ "$ASESR" = 0 ]]
then 
cd ~
{
git clone https://github.com/snehccurry/YMOUS/
cd $OLDPWD
cd ~/ymous
mkdir etc/.disabled
mv ymous etc/.disabled
mv etc/ymous ~/ymous
cp etc/.disabled/ymous etc
rm -rf etc/.disabled
} &> /dev/null
chmod +x ymous
./ymous
{
if [[ -f ~/ymous/.updated ]]
then
rm ~/ymous/.updated
else
cd ~/ymous
mkdir etc/.disabled
mv entropy etc/.disabled
mv etc/ymous ~/ymous
cp etc/.disabled/ymous etc
rm -rf etc/.disabled
fi
} &> /dev/null
else
cd ~
sleep 1
exit
fi
fi
